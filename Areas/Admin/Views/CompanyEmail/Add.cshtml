@using System.Web.Mvc.Html
@model MrCMS.Web.Apps.Companies.Entities.CompanyEmail
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}
@using (Html.BeginForm("Add", "CompanyEmail", new { id = "" }, FormMethod.Post))
{
    <fieldset>
        <legend>
            Add Email
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn-success btn" value="Add" />
            </span>
        </legend>
        @Html.HiddenFor(item => item.Company.Id)
        <div class="form-group">
            @Html.LabelFor(x => x.Kind)
            @Html.TextBoxFor(x => x.Kind, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Kind)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.EmailAddress)
            @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.EmailAddress)
        </div>
    </fieldset>
}

