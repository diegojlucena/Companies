@model MrCMS.Web.Apps.Companies.Entities.CompanyAddress
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "CompanyAddress", FormMethod.Post))
{
    <fieldset>
        <legend>
            @Resource("Delete Address")
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn-danger btn" value="Delete" />
            </span>
        </legend>
        @Html.HiddenFor(item => item.Id)
        <p>Are you sure you want to delete address @Model.Address1 from @Model.Company.Name?</p>
    </fieldset>
}